<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#E41919"
        android:fontFamily="serif"
        android:paddingStart="65dp"
        android:paddingTop="30dp"
        android:text="Bookmarked"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold">

    </TextView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="317dp"
        android:layout_marginLeft="5.7dp"
        android:layout_marginTop="-42dp"
        app:srcCompat="@drawable/jogos_mortais" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="-22dp"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/jogos_mortais_qual_filme_da_franquia_de_terror_mais_pesado"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="262dp"
            android:layout_height="208dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="@string/qual_a_ordem_cronol_gica_dos_filmes_jogos_mortais"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
